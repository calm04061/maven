        <hibernate.version>5.2.11.Final</hibernate.version>
        <tomcat.version>8.5.16</tomcat.version>
        <gemini.version>2.1.0.JAVA7</gemini.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
